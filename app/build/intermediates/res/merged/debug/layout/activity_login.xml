<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
	
    <ImageView
        android:contentDescription="@string/vacio"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo_syswork_chico" />

    <TextView
        android:id="@+id/textFiller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuatro_espacios" />
	
    <ImageView
        android:contentDescription="@string/vacio"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/candado_grande" />
    
    <TextView
        android:id="@+id/textFiller2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuatro_espacios" />
    
    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/accion_solicita_usuario"
        android:layout_gravity="center_horizontal"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword" 
        android:hint="@string/accion_solicita_password"
        android:layout_gravity="center_horizontal"
        android:ems="10"
	/>
    
    <TextView
        android:id="@+id/textFiller3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuatro_espacios" />
    
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/accion_ingresar" 
        />

</LinearLayout>