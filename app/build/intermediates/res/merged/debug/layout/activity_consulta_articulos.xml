<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<TextView
		android:text="Elija el Rubro"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/txtArticulo" />

	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/spnRubros" />

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <EditText
	        android:id="@+id/txtBuscar"
	        android:layout_width="262dp"
	        android:layout_height="wrap_content"
	        android:hint="@string/hint_busqueda_descripcion"
	        android:ems="10" >
	    </EditText>
		
		<ImageView
		    android:contentDescription="@string/cuatro_espacios"
	        android:id="@+id/imgBuscar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icono_buscar_chico" />
    </LinearLayout>

    <ListView
        android:id="@+id/lstArticulos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </ListView>

</LinearLayout>