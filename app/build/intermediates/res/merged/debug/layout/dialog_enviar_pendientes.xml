<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <CheckBox
        android:id="@+id/chkEnviarPendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/progressBar1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="36dp"
        android:text="@string/pedidosPendientes" />

    <TextView
        android:id="@+id/txtResultadoEnvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkEnviarPendientes"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="@string/vacio"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnCerrarEnvioPendientes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResultadoEnvio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/cerrar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCerrarEnvioPendientes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/vacio" />

    <ImageView
        android:contentDescription="@string/vacio"
        android:id="@+id/imgSincronizarResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/enviapedidospendientes_resultado" />
    
</RelativeLayout>